@namespace AirportSubscribe
@inherits LayoutComponentBase

@if (IsLogin)
{
    <AntDesign.Pro.Layout.BasicLayout Logo="@("https://gw.alipayobjects.com/zos/rmsportal/KDpgvguMpGfqaHPjicRK.svg")"
                                      MenuData="_menuData">
        <RightContentRender>
            <RightContent />
        </RightContentRender>

        <ChildContent>
            @Body
        </ChildContent>

    </AntDesign.Pro.Layout.BasicLayout>
    <SettingDrawer />
}
else
{
    <p>请登录:@LoginCount</p>
    <Button @onclick="Login">Login</Button>
}

@code
{
    private readonly MenuDataItem[] _menuData =
    {
        new MenuDataItem
        {
            Path = "/",
            Name = "welcome",
            Key = "welcome",
            Icon = "smile",
        },
        new MenuDataItem{
            Path = "/Urls",
            Name = "Urls",
            Key = "Urls",
            Icon = "smile"
        },
        new MenuDataItem{
            Path = "/UrlConfiguration/List",
            Name = "Settings",
            Key = "settings",
            Icon = "smile"
        }
    };
}